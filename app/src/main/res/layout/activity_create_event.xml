<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateEvent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/newEvtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/evtName"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:maxLines="1"
            android:inputType="text" />

        <EditText
            android:id="@+id/newEvtDescript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/evtDescript"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:maxLines="10"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:text="@string/evtType"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>
        <Spinner
            android:id="@+id/newEvtTypePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:spinnerMode="dropdown"
            android:textColor="@color/font_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:text="@string/evtCategory"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <CheckBox android:id="@+id/newEvtPrivate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/newEvtPrivate"
            android:textColor="@color/font_grey"
            android:textSize="15sp"/>
        <CheckBox android:id="@+id/newEvtPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:text="@string/newEvtPublic"
            android:textColor="@color/font_grey"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:text="@string/evtInvitations"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <EditText
            android:id="@+id/newEvtInvitations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/evtInvitationsHint"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:maxLines="1"
            android:inputType="text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:text="@string/evtSignUpDueDate"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <Button
            android:id="@+id/evtDueDatePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="@color/white"
            android:background="@drawable/button_round_corners"
            android:textAllCaps="false"
            android:text="@string/selectTime"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:text="@string/evtTimeSlots"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>


        <ListView
            android:id="@+id/timeslotsLv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="@color/font_grey"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">
            <Button
                android:id="@+id/evtTimeSlotDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/button_round_corners"
                android:textAllCaps="false"
                android:text="@string/selectTime"/>

            <Button
                android:id="@+id/evtTimeSlotTimePickerSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/button_round_corners"
                android:textAllCaps="false"
                android:layout_marginStart="30dp"
                android:text="@string/evtTimeSlotPickerSubmit"/>
        </LinearLayout>

        <EditText
            android:id="@+id/evtDurationHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/evtDurationHours"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"

            android:maxLines="1"
            android:inputType="text" />

        <EditText
            android:id="@+id/evtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="@string/evtLocation"
            android:textColor="@color/font_grey"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:maxLines="1"
            android:inputType="text" />

        <Button
            android:id="@+id/evtSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/button_round_corners"
            android:textAllCaps="false"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="@string/evtSubmit"/>

    </LinearLayout>
</ScrollView>